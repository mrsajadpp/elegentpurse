<div class="container-xxl position-relative bg-white d-flex p-0">
    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-black" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    {{> admin_header}}
    <!-- Sale & Revenue Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="container d-flex mb-5">
                <div>
                    <h5><strong> Category</strong> </h5>
                    <span class="opacity-50"> Dashboard > Categorise</span>
                </div>
                <div class="ms-auto me-5">
                    <a href="/admin/category/add" class="btn text-white me-auto  btn-dark"><i class="fa-regular fa-plus"
                            style="color: #ffffff;"></i> Add Category</a>
                </div>
            </div>


            <div>
                <table class="table" id="myTable">
                    <colgroup>

                        <col style="width: 158px;" /> <!-- Column for Category -->

                        <col style="width: 150px;" /> <!-- Column for Added -->
                        <col style="width: 100px;" /> <!-- Column for Action -->
                        <col style="width: 100px;" /> <!-- Column for Action -->

                    </colgroup>
                    <thead>
                        <tr>

                            <th scope="col">Category</th>
                            <th scope="col">Description</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>

                    <tbody>
                        {{#each categories}}
                        <tr>

                            <td colspan="1">
                                {{this.name}}
                            </td>

                            <td>
                                {{this.description}}
                            </td>

                            <td class="pt-3">
                                <button id="activeButton" class="unlistButton btn" onclick="location.href = '/api/product/category/del/{{this._id}}'"><i class="fa fa-trash"
                                        style="color: #4a5153;" aria-hidden="true"></i></button>
                                <button id="activeButton" class="unlistButton btn" onclick="location.href = '/admin/product/category/edit/{{this._id}}'"><i class="fa-solid fa-pen-to-square"
                                        style="color: #4a5153;"></i></button>
                            </td>

                            </td>

                        </tr>
                        {{/each}}

                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>




