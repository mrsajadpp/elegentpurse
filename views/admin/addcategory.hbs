<div class="container-xxl position-relative bg-white d-flex p-0">
    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-black" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    {{> admin_header}}

    <!-- Sale & Revenue Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="container d-flex mb-5">
                <div>
                    <h5><strong> Category</strong> </h5>
                    <span class="opacity-50"> Dashboard > Categorise > Add Category</span>
                </div>
            </div>


            <div>
                <div class="container d-flex">
                    <form action="/api/product/category/add" method="post">

                        <div class="col-6 ">

                            <h6> <strong> General Information</strong></h6>


                            <div class="mb-3">
                                <label for="product-name" class="form-label">Category Name</label>
                                <input type="text" class="form-control" id="productName" name="name"
                                    placeholder="Name here" required>

                            </div>
                            <div class="mb-5">
                                <label for="discription" class="form-label">Discription</label>
                                <textarea class="form-control" rows="5" name="discription" id="comment" required></textarea>
                            </div>

                            <div class="mb-5">
                               <button class="form-control" type="submit">Save</button>
                            </div>
                        </div>
                    </form>



                </div>


            </div>

        </div>
    </div>
</div>




