<!-- + - Qty_button Action  -->
<script>
  function decreaseQuantity() {
    var currentQtyInput = document.getElementById("currentQty");
    var currentQty = parseInt(currentQtyInput.value);
    if (currentQty > 1) {
      // Ensure quantity doesn't go below 1
      currentQtyInput.value = currentQty - 1;
    }
  }

  function increaseQuantity() {
    var currentQtyInput = document.getElementById("currentQty");
    var currentQty = parseInt(currentQtyInput.value);
    if (currentQty < 10) {
      // Ensure quantity doesn't exceed 10
      currentQtyInput.value = currentQty + 1;
    }
  }
</script>

