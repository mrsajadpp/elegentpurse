          <option value="Delhi">Delhi</option>
          <option value="Lakshadweep">Lakshadweep</option>
          <option value="Puducherry">Puducherry</option>
        </select>
      </div>
      <div class="input">
        <input type="text" id="username" name="city" placeholder="City" required>
      </div>
      <div class="input">
        <input type="text" id="username" name="land_mark" placeholder="Land Mark" required>
      </div>
      <div class="input">
        <input type="number" name="zip_code" id="password" placeholder="Zip Code" required>
      </div>
      <div class="input">
        <select name="gender" id="gender">
          <option value="Male">Male</option>
          <option value="Female">Female</option>
          <option value="Others">Others</option>
        </select>
      </div>
      <div class="input loginInp">
        <button type="submit" title="Click to login with your existing account.">LET'S GO</button>
      </div>
      <div class="info">
        <span>Do you have a account? <a href="/auth/login">LogIn.</a></span>
      </div>
    </form>
  </div>
</div>