<div class="container-xxl position-relative bg-white d-flex p-0">
    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-black" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    {{> admin_header}}
    <!-- Sale & Revenue Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="container d-flex mb-5">
                <div>
                    <h5><strong> Products</strong> </h5>
                    <span class="opacity-50"> Dashboard > Product List</span>
                </div>
                <div class="ms-auto me-5">
                    <a href="/admin/product/add" class="btn text-white me-auto  btn-dark"><i class="fa-regular fa-plus"
                            style="color: #ffffff;"></i> Add Product</a>
                </div>
            </div>


            <div>
                <table class="table" id="myTable">
                    <colgroup>

                        <col style="width: 220px;" /> <!-- Column for Product -->
                        <col style="width: 40px;" /> <!-- Column for SKU -->
                        <col style="width: 90px;" /> <!-- Column for Category -->
                        <col style="width: 20px;" /> <!-- Column for Stock -->
                        <col style="width: 70px;" /> <!-- Column for Price -->
                        <col style="width: 70px;" /> <!-- Column for Price -->
                        <col style="width: 70px;" /> <!-- Column for Status -->

                        <col style="width: 100px;" /> <!-- Column for Action -->
                    </colgroup>
                    <thead>
                        <tr>

                            <th scope="col">Product</th>
                            <th scope="col">SKU</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Price</th>
                            <th scope="col">MRP</th>
                            <th scope="col">Status</th>

                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>

                            <td colspan="1">
                                <img src="/images/{{this._id}}.jpeg"
                                    alt="" width="50" height="50" class="me-3">
                                {{this.name}}
                            </td>
                            <td class="pt-3">{{this.SKU}}</td>
                            <td class="pt-3">{{this.quantity}}</td>
                            <td class="pt-3">₹{{this.sale_price}}</td>
                            <td class="pt-3">₹{{this.price}}</td>
                            <td class="pt-3">{{this.status}}</td>

                            <td class="pt-3">
                                <button id="activeButton" class="unlistButton btn"><i class="fa-solid fa-pen-to-square" style="color: #000000;"></i></button>

                                <button class="btn" style=""><i class="fa-regular fa-trash-can "
                                        style="color: #000000; font-size:medium;"></i></button>


                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>




